{
  "phases": {
    "setup": {
      "nixPkgs": [
        "php",
        "php82Extensions.pdo",
        "php82Extensions.pdo_mysql",
        "php82Extensions.gd"
      ]
    },
    "build": {
      "cmds": [
        "composer install --no-dev --optimize-autoloader",
        "npm ci",
        "npm run build",
        "mkdir -p /app/frankenphp",
        "cp /app/php.ini /app/frankenphp/php.ini"
      ]
    }
  },
  "start": {
    "cmd": "php artisan storage:link || true && frankenphp php-server public/index.php --port $PORT"
  }
}
